{
  "version": 2,
  "env": {
      "ON_VERCEL": "true"
  },
  "builds": [
      {
          "src": "server/**/*.js",
          "use": "@now/node"
      },
      {
          "src": "nuxt.config.js",
          "use": "@nuxtjs/now-builder"
      }
  ],
  "routes": [
      { "src": "/server/(.*)", "dest": "server/index.js" },
      { "src": "/server", "dest": "server/index.js" },
      { "src": "/(.*)", "dest": "$1" }
  ]
}
